@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="auth-form-container shadow-lg rounded-4 p-4 p-sm-5 bg-white">
                <div class="text-center mb-4">
                    <img src="~/images/coffee-logo.png" alt="Brew Haven Coffee Logo" height="60" class="mb-3">
                    <h2 class="fw-bold text-coffee-dark">Create Your Account</h2>
                    <p class="text-muted">Join our coffee community and enjoy exclusive offers</p>
                </div>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-4">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3 border-start border-danger border-4" role="alert"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.FullName" class="form-label fw-semibold">Full Name</label>
                        <div class="input-group input-group-lg auth-input-group">
                            <span class="input-group-text bg-coffee-light text-white border-0">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input asp-for="Input.FullName" class="form-control form-control-lg border-start-0" autocomplete="fullname" placeholder="Enter your full name" />
                        </div>
                        <span asp-validation-for="Input.FullName" class="text-danger small mt-1"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="form-label fw-semibold">Email Address</label>
                        <div class="input-group input-group-lg auth-input-group">
                            <span class="input-group-text bg-coffee-light text-white border-0">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <input asp-for="Input.Email" class="form-control form-control-lg border-start-0" autocomplete="username" placeholder="Enter your email" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small mt-1"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                        <div class="input-group input-group-lg auth-input-group">
                            <span class="input-group-text bg-coffee-light text-white border-0">
                                <i class="bi bi-shield-lock-fill"></i>
                            </span>
                            <input asp-for="Input.Password" type="password" class="form-control form-control-lg border-start-0" autocomplete="new-password" placeholder="Create a password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small mt-1"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                        <div class="input-group input-group-lg auth-input-group">
                            <span class="input-group-text bg-coffee-light text-white border-0">
                                <i class="bi bi-shield-check-fill"></i>
                            </span>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-lg border-start-0" autocomplete="new-password" placeholder="Confirm your password" />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Input.Role" class="form-label fw-semibold">Select Role</label>
                        <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select form-select-lg auth-select">
                            <option disabled selected>Select Role</option>
                        </select>
                    </div>

                    <button id="registerSubmit" type="submit" class="btn btn-brown btn-lg w-100 py-3 rounded-3 shadow-sm">
                        <i class="bi bi-person-plus-fill me-2"></i> Create Account
                    </button>

                    <div class="text-center mt-4">
                        <p class="mb-0">Already have an account?
                            <a asp-page="./Login" class="text-coffee fw-bold text-decoration-underline">
                                Sign In
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
