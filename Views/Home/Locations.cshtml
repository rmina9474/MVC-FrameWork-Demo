@{
    ViewData["Title"] = "Locations";
}

<div class="container">
    <div class="row mb-5">
        <div class="col-md-8 mx-auto text-center">
            <h1 class="display-4 mb-4">Our Locations</h1>
            <p class="lead">Find a Brew Haven coffee shop near you</p>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-10 mx-auto">
            <div class="card border-0 shadow-sm mb-4">
                <div class="row g-0">
                    <div class="col-md-5">
                        <img src="/images/district-1-location.jpg" class="img-fluid rounded-start h-100" alt="District 1 Location" style="object-fit: cover;">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body p-4 p-lg-5">
                            <h2 class="card-title h3 mb-3">District 1 - Flagship Store</h2>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-geo-alt me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">123 Le Loi Street, Ben Nghe Ward, District 1, HCMC</p>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-telephone me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">+84 28 3823 xxxx</p>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-clock me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">Open Daily: 7:00 AM - 10:00 PM</p>
                            </div>
                            <h3 class="h6 mt-4 mb-3">Amenities:</h3>
                            <div class="d-flex flex-wrap gap-2 mb-4">
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-wifi me-1"></i> Free Wi-Fi</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-outlet me-1"></i> Power Outlets</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-bicycle me-1"></i> Bike Parking</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-book me-1"></i> Book Corner</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-music-note-beamed me-1"></i> Live Music (Weekends)</span>
                            </div>
                            <a href="https://maps.google.com" target="_blank" class="btn btn-outline-brown">Get Directions</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="row g-0">
                    <div class="col-md-5 order-md-2">
                        <img src="/images/district-2-location.jpg" class="img-fluid rounded-end h-100" alt="District 2 Location" style="object-fit: cover;">
                    </div>
                    <div class="col-md-7 order-md-1">
                        <div class="card-body p-4 p-lg-5">
                            <h2 class="card-title h3 mb-3">Thao Dien - District 2</h2>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-geo-alt me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">42 Thao Dien Street, Thao Dien Ward, District 2, HCMC</p>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-telephone me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">+84 28 3744 xxxx</p>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-clock me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">Open Daily: 7:00 AM - 11:00 PM</p>
                            </div>
                            <h3 class="h6 mt-4 mb-3">Amenities:</h3>
                            <div class="d-flex flex-wrap gap-2 mb-4">
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-wifi me-1"></i> Free Wi-Fi</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-outlet me-1"></i> Power Outlets</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-p-square me-1"></i> Free Parking</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-easel me-1"></i> Meeting Room</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-tree me-1"></i> Garden Seating</span>
                            </div>
                            <a href="https://maps.google.com" target="_blank" class="btn btn-outline-brown">Get Directions</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="row g-0">
                    <div class="col-md-5">
                        <img src="/images/district-3-location.jpg" class="img-fluid rounded-start h-100" alt="District 3 Location" style="object-fit: cover;">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body p-4 p-lg-5">
                            <h2 class="card-title h3 mb-3">District 3 - Japan Town</h2>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-geo-alt me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">15 Le Quy Don Street, Vo Thi Sau Ward, District 3, HCMC</p>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-telephone me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">+84 28 3930 xxxx</p>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-clock me-2" style="color: #8b5a2b;"></i>
                                <p class="card-text mb-0">Open Daily: 7:30 AM - 10:30 PM</p>
                            </div>
                            <h3 class="h6 mt-4 mb-3">Amenities:</h3>
                            <div class="d-flex flex-wrap gap-2 mb-4">
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-wifi me-1"></i> Free Wi-Fi</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-outlet me-1"></i> Power Outlets</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-cup-hot me-1"></i> Pour-Over Bar</span>
                                <span class="badge bg-light text-dark p-2"><i class="bi bi-palette me-1"></i> Art Gallery</span>
                            </div>
                            <a href="https://maps.google.com" target="_blank" class="btn btn-outline-brown">Get Directions</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h2 class="h3 mb-4">Coming Soon</h2>
            <p>We're excited to announce that we'll be opening new locations in Phu Nhuan District and Binh Thanh District in the coming months. Stay tuned for updates!</p>

            <div class="alert alert-light border mt-4" role="alert">
                <h3 class="h5 mb-3">Interested in a Brew Haven in your area?</h3>
                <p class="mb-3">We're always looking to expand! Let us know where you'd like to see our next location.</p>
                <a href="#" class="btn btn-sm btn-outline-brown">Submit a Location Request</a>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-brown {
        color: #8b5a2b;
        border-color: #8b5a2b;
    }

    .btn-outline-brown:hover {
        color: white;
        background-color: #8b5a2b;
        border-color: #8b5a2b;
    }
</style>