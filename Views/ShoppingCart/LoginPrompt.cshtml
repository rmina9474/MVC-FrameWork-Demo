@{
    ViewData["Title"] = "Continue Shopping";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Almost There!</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                        <h5>Your items are waiting in your cart</h5>
                        <p class="text-muted">Please choose how you'd like to proceed</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 border-end">
                            <div class="p-3 text-center">
                                <h5 class="mb-3">Already have an account?</h5>
                                <p>Sign in to access your saved information and track your orders.</p>
                                <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-primary btn-lg w-100 mb-3">
                                    Sign In
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 text-center">
                                <h5 class="mb-3">New customer?</h5>
                                <p>You can continue as a guest or create an account for a better experience.</p>
                                <a asp-controller="ShoppingCart" asp-action="Checkout" class="btn btn-success btn-lg w-100 mb-3">
                                    Continue as Guest
                                </a>
                                <div class="mt-3">
                                    <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@ViewBag.ReturnUrl">
                                        Create an account
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>