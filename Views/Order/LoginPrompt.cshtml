@{
    ViewData["Title"] = "Continue to Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0">Continue to Your Order</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 border-end">
                            <div class="py-4 px-3">
                                <h5>Sign In</h5>
                                <p class="text-muted">Already have an account? Sign in to access your order history and saved information.</p>
                                <a asp-area="Identity" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" 
                                   class="btn btn-primary w-100">
                                    <i class="bi bi-person me-2"></i>Sign In
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="py-4 px-3">
                                <h5>Continue as Guest</h5>
                                <p class="text-muted">Don't have an account? You can still place an order without creating an account.</p>
                                <a asp-action="Index" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-cart me-2"></i>Continue as Guest
                                </a>
                                <div class="mt-3">
                                    <small class="text-muted">You can create an account later if you wish.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 