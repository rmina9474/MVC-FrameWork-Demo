@model Reina.MacCredy.Models.Order
@using Reina.MacCredy.Extensions
@using Reina.MacCredy.Models

@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-5">
    <div class="row">
        <!-- Order Summary -->
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Your Order</span>
                @{
                    var cart = Context.Session.GetObjectFromJson<ShoppingCart>("Cart") ?? new ShoppingCart();
                    var itemCount = cart.Items?.Sum(i => i.Quantity) ?? 0;
                }
                <span class="badge bg-primary rounded-pill">@itemCount</span>
            </h4>
            <ul class="list-group mb-3">
                @if (cart != null && cart.Items != null && cart.Items.Any())
                {
                    foreach (var item in cart.Items)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-sm">
                            <div>
                                <h6 class="my-0">@item.Name</h6>
                                <small class="text-muted">Quantity: @item.Quantity</small>
                            </div>
                            <span class="text-muted">@((item.Price * item.Quantity).ToString("#,##0")) VND</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total</span>
                        <strong>@cart.Items.Sum(i => i.Price * i.Quantity).ToString("#,##0") VND</strong>
                    </li>
                }
                else
                {
                    <li class="list-group-item text-center">
                        <p>Your cart is empty</p>
                        <a href="@Url.Action("Browse", "Product")" class="btn btn-outline-primary">Continue Shopping</a>
                    </li>
                }
            </ul>
        </div>

        <!-- Checkout Form -->
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Shipping Information</h4>
            <form asp-action="Checkout" method="post">
                <div class="row g-3">
                    @if (User.Identity?.IsAuthenticated != true)
                    {
                        <div class="col-12">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    }

                    <div class="col-12">
                        <label asp-for="ShippingAddress" class="form-label">Shipping Address</label>
                        <textarea asp-for="ShippingAddress" class="form-control" rows="3" required></textarea>
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Notes" class="form-label">Order Notes (Optional)</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    
                    <div class="col-12 mt-4">
                        <h5 class="mb-3">Payment Method</h5>
                        <div class="payment-methods">
                            <div class="payment-method mb-3">
                                <input class="form-check-input" type="radio" name="PaymentMethod"
                                       value="CashOnDelivery" id="payment-cod" checked>
                                <label class="form-check-label ms-2" for="payment-cod">
                                    <strong>Cash On Delivery</strong> - Pay when you receive your order
                                </label>
                            </div>
                            
                            <div class="payment-method mb-3">
                                <input class="form-check-input" type="radio" name="PaymentMethod"
                                       value="MoMo" id="payment-momo">
                                <label class="form-check-label ms-2" for="payment-momo">
                                    <strong>MoMo E-Wallet</strong> - Pay via MoMo mobile wallet
                                </label>
                            </div>
                            
                            <div class="payment-method mb-3">
                                <input class="form-check-input" type="radio" name="PaymentMethod"
                                       value="VNPay" id="payment-vnpay">
                                <label class="form-check-label ms-2" for="payment-vnpay">
                                    <strong>VNPay</strong> - Pay via VNPay gateway
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Place Order</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .container {
        max-width: 960px;
    }

    .list-group-item {
        border-radius: 0;
    }

    .list-group-item:first-child {
        border-top-left-radius: 0.25rem;
        border-top-right-radius: 0.25rem;
    }

    .list-group-item:last-child {
        border-bottom-left-radius: 0.25rem;
        border-bottom-right-radius: 0.25rem;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: var(--coffee-medium);
    }

    .btn-primary {
        background-color: var(--coffee-medium);
        border-color: var(--coffee-medium);
    }

    .btn-primary:hover {
        background-color: var(--coffee-dark);
        border-color: var(--coffee-dark);
    }

    .text-primary {
        color: var(--coffee-dark) !important;
    }

    .bg-primary {
        background-color: var(--coffee-medium) !important;
    }
    
    .payment-methods {
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
    }
    
    .payment-method {
        padding: 8px;
    }
    
    .payment-method:hover {
        background-color: #f0f0f0;
        border-radius: 5px;
    }
</style>