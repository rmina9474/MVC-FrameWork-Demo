@model IEnumerable<Reina.MacCredy.Controllers.OrderViewModel>

@{
    ViewData["Title"] = "Order History";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-receipt"></i> Order History
        </h2>
        <div class="d-flex gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-cart-plus"></i> Continue Shopping
            </a>
        </div>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th class="text-end">Total Amount</th>
                            <th>Shipping Address</th>
                            <th>Items</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">#@order.Id</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-calendar-event text-muted me-2"></i>
                                            @order.OrderDate.ToString("MMM dd, yyyy HH:mm")
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <strong>@order.TotalPrice.ToString("#,##0") VND</strong>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-geo-alt text-muted me-2"></i>
                                            @order.ShippingAddress
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@order.OrderItemCount items</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@order.Id"
                                           class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="bi bi-inbox fs-2 d-block mb-2"></i>
                                        No order history found
                                    </div>
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                                        <i class="bi bi-cart-plus"></i> Start Shopping
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, .navbar, .footer {
            display: none !important;
        }

        .card {
            box-shadow: none !important;
            border: none !important;
        }

        .table {
            border: 1px solid #dee2e6;
        }

        .badge {
            border: 1px solid #dee2e6 !important;
            color: #000 !important;
            background-color: transparent !important;
        }
    }
</style>