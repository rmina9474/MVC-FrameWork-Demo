@using Microsoft.AspNetCore.Identity
@using Reina.MacCredy.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-flex align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="dropdown">
            <a class="btn btn-outline-primary rounded-pill d-flex align-items-center" href="#" role="button" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-2"></i>
                <span>Hello @UserManager.GetUserName(User)!</span>
                <i class="bi bi-chevron-down ms-2 small"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm" aria-labelledby="accountDropdown">
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a class="dropdown-item d-flex align-items-center py-2" href="/Admin/Dashboard">
                            <i class="bi bi-speedometer2 me-2 text-primary"></i>
                            <span>Admin Dashboard</span>
                        </a>
                    </li>
                }
                <li>
                    <a class="dropdown-item d-flex align-items-center py-2" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-gear me-2 text-primary"></i>
                        <span>Settings</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center py-2" asp-area="" asp-controller="Order" asp-action="OrderHistory">
                        <i class="bi bi-receipt me-2 text-primary"></i>
                        <span>Orders</span>
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item d-flex align-items-center py-2 text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            <span>Logout</span>
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    }
    else
    {
        <div>
            <a class="btn btn-outline-primary rounded-pill" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-2"></i> Login
            </a>
            <a class="btn btn-primary rounded-pill ms-2" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-2"></i> Register
            </a>
        </div>
    }
</div>
